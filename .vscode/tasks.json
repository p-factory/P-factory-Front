{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run ESLint Fix",
      "type": "shell",
      "command": "pnpm eslint . --ext .js,.jsx,.ts,.tsx --fix",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Echo",
      "type": "shell",
      "command": "echo '!!TEST: I run for all files.'",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}